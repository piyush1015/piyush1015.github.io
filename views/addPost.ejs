<body>
<script>
function myFunction() {
    alert("Thanking you! Dear Donor!!");
}
</script>
    <a class="navbar-brand" href="/" style="color:#4d0000"><u><b>Back to Home</b></u></a>
    <div class="container">
    <h1 style="text-align: center">Donors Addition Form</h1>
    <div class="panel panel-success">
        <div class="panel-heading">Giving opportunity to help someone </div>
        <div class="panel-body">
                <form role="form" method="post" action="/api/addSdonation" id="contact-form" class="contact-form">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dName" style="color:green">Donor's Name:</label>
                                <input type="text" class="form-control" name="dName"required autocomplete="off" id="dName" placeholder="Enter name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dEmail" style="color:green">Email id:</label>
                                <input type="email" class="form-control" name="dEmail"required autocomplete="off" id="dEmail" placeholder="Enter email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="dContactno" style="color:green">Contact:</label>
                                <input type="number" class="form-control" name="dContactno"required autocomplete="off" id="dContactno" placeholder="Enter contact info">
                            </div>
                        </div>
             
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="dAddress" style="color:green">Address:</label>
                                <textarea class="form-control textarea" rows="3" name="dAddress" id="dAddress" placeholder="Enter Address"></textarea>
                            </div>
                        </div>
                    </div>
                   <div class="row">
                        
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="aType" style="color:green">Article Type:</label>
                                <input type="text" class="form-control" name="aType" autocomplete="off" id="aType" placeholder="Enter type">
                            </div>
                        </div>
                       <div class="col-md-6">
                            <div class="form-group">
                                <label for="aName" style="color:green">Article Name:</label>
                                <input type="text" class="form-control" name="aName"required autocomplete="off" id="aName" placeholder="Enter name">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="aQuantity" style="color:green">Quantity:</label>
                                <input type="number" class="form-control" name="aQuantity"required autocomplete="off" id="aQuantity" placeholder="Enter quantity">
                            </div>
                        </div> 
                    
                    
                    <div class="row">
                        <div class="col-md-12">
                            <button type="submit" class="btn main-btn pull-right btn-success" onclick="myFunction()">Submit Details</button>
                        </div>
                    </div>
                </form>
        </div>
    </div>

</div>
